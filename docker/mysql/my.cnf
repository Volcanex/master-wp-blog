# MySQL Configuration for WordPress Business Template Development
# ==============================================================

[mysqld]

# General Settings
default-storage-engine = InnoDB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Performance Settings
max_connections = 200
max_allowed_packet = 64M
thread_stack = 256K
thread_cache_size = 8
query_cache_size = 64M
query_cache_type = 1

# InnoDB Settings
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_file_per_table = 1
innodb_open_files = 400
innodb_io_capacity = 400
innodb_flush_method = O_DIRECT

# Binary Logging (useful for replication and point-in-time recovery)
log-bin = mysql-bin
binlog_format = mixed
expire_logs_days = 7

# Slow Query Log (for development debugging)
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2
log_queries_not_using_indexes = 1

# Error Log
log-error = /var/log/mysql/error.log

# General Query Log (for development - disable in production)
general_log = 1
general_log_file = /var/log/mysql/general.log

# Security Settings
local-infile = 0

# WordPress Specific Settings
max_heap_table_size = 32M
tmp_table_size = 32M

# Connection Settings
wait_timeout = 600
interactive_timeout = 600

# Buffer Settings
key_buffer_size = 128M
read_buffer_size = 2M
read_rnd_buffer_size = 16M
bulk_insert_buffer_size = 64M

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4