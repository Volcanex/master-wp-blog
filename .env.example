# WordPress Business Template - Environment Variables
# ===================================================
# Copy this file to .env and update with your local settings
# DO NOT commit .env to version control - it contains sensitive data

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Local Development Database (Docker/XAMPP/MAMP)
DB_NAME=master_wp_blog_local
DB_USER=wordpress
DB_PASSWORD=wordpress_password
DB_HOST=localhost
DB_PORT=3306

# Database Table Prefix
DB_PREFIX=wp_

# =============================================================================
# WORDPRESS CONFIGURATION
# =============================================================================

# WordPress URLs (update for your local setup)
WP_HOME=http://localhost:8000
WP_SITEURL=http://localhost:8000

# WordPress Environment Type
WP_ENVIRONMENT_TYPE=development

# WordPress Debug Settings
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=true
SCRIPT_DEBUG=true

# WordPress Memory Limit
WP_MEMORY_LIMIT=512M

# =============================================================================
# SECURITY KEYS AND SALTS
# =============================================================================
# Generate these using: https://api.wordpress.org/secret-key/1.1/salt/
# IMPORTANT: Replace these with unique keys!

AUTH_KEY=put_your_unique_phrase_here
SECURE_AUTH_KEY=put_your_unique_phrase_here
LOGGED_IN_KEY=put_your_unique_phrase_here
NONCE_KEY=put_your_unique_phrase_here
AUTH_SALT=put_your_unique_phrase_here
SECURE_AUTH_SALT=put_your_unique_phrase_here
LOGGED_IN_SALT=put_your_unique_phrase_here
NONCE_SALT=put_your_unique_phrase_here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Docker Configuration
DOCKER_WORDPRESS_PORT=8000
DOCKER_MYSQL_PORT=3306
DOCKER_PHPMYADMIN_PORT=8080
DOCKER_MAILHOG_SMTP_PORT=1025
DOCKER_MAILHOG_WEB_PORT=8025
DOCKER_REDIS_PORT=6379

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=root_password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings (for development - use MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SECURE=false

# Email Settings
MAIL_FROM_ADDRESS=noreply@localhost
MAIL_FROM_NAME=WordPress Business Template

# =============================================================================
# BUSINESS TEMPLATE SETTINGS
# =============================================================================

# Business Information (for template customization)
BUSINESS_NAME=Your Business Name
BUSINESS_PHONE=+1 (555) 123-4567
BUSINESS_EMAIL=hello@yourbusiness.com
BUSINESS_ADDRESS=123 Business Street, Suite 100, City, State 12345
BUSINESS_HOURS=Monday - Friday: 9:00 AM - 6:00 PM

# Business Colors (CSS Variables)
BUSINESS_PRIMARY_COLOR=#2563eb
BUSINESS_SECONDARY_COLOR=#f59e0b
BUSINESS_DARK_COLOR=#1f2937
BUSINESS_LIGHT_COLOR=#f8fafc

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================

# Google Analytics (leave empty for local development)
GOOGLE_ANALYTICS_ID=

# Google Maps API (for contact page maps)
GOOGLE_MAPS_API_KEY=

# reCAPTCHA (for contact forms)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Social Media Links
FACEBOOK_URL=
TWITTER_URL=
LINKEDIN_URL=
INSTAGRAM_URL=

# =============================================================================
# PERFORMANCE AND CACHING
# =============================================================================

# Caching Settings
WP_CACHE=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CDN Settings (for production)
CDN_URL=
CDN_ENABLED=false

# =============================================================================
# SSL AND SECURITY
# =============================================================================

# Force SSL (set to true for HTTPS)
FORCE_SSL=false
FORCE_SSL_ADMIN=false

# Security Settings
DISALLOW_FILE_EDIT=false
AUTOMATIC_UPDATER_DISABLED=true
WP_AUTO_UPDATE_CORE=true

# =============================================================================
# LOCAL DEVELOPMENT SPECIFIC
# =============================================================================

# Local Development Flag
WP_LOCAL_DEV=true

# File System Method
FS_METHOD=direct

# Upload Settings
UPLOAD_MAX_FILESIZE=64M
POST_MAX_SIZE=64M
MAX_EXECUTION_TIME=300

# =============================================================================
# STAGING/PRODUCTION OVERRIDES
# =============================================================================
# These will be used in staging/production environments

# Staging Settings
STAGING_WP_HOME=https://staging.yourdomain.com
STAGING_WP_SITEURL=https://staging.yourdomain.com
STAGING_DB_NAME=staging_database
STAGING_DB_USER=staging_user
STAGING_DB_PASSWORD=staging_password

# Production Settings
PRODUCTION_WP_HOME=https://yourdomain.com
PRODUCTION_WP_SITEURL=https://yourdomain.com
PRODUCTION_DB_NAME=production_database
PRODUCTION_DB_USER=production_user
PRODUCTION_DB_PASSWORD=production_password

# =============================================================================
# NOTES
# =============================================================================

# Local Development Setup Instructions:
# 1. Copy this file to .env
# 2. Update database credentials for your local setup
# 3. Generate new security keys from WordPress.org
# 4. Update WP_HOME and WP_SITEURL for your local URL
# 5. Create the database specified in DB_NAME
# 6. Start your local development environment

# Docker Setup:
# - Use 'db' as DB_HOST when using Docker Compose
# - Use the Docker port numbers specified above
# - Database will be automatically created in Docker

# XAMPP Setup:
# - Use 'localhost' as DB_HOST
# - Use 'root' as DB_USER
# - Leave DB_PASSWORD empty (or set as needed)
# - Create database manually in phpMyAdmin

# MAMP Setup:
# - Use 'localhost' as DB_HOST
# - Use 'root' as DB_USER
# - Use 'root' as DB_PASSWORD (or check MAMP settings)
# - Create database manually in phpMyAdmin

# Local by Flywheel:
# - Check your Local site settings for database credentials
# - Use the Local site URL for WP_HOME and WP_SITEURL