# WordPress Business Template - Git Ignore File
# ==============================================
# This .gitignore is optimized for WordPress development
# focusing on custom themes and business template management

# WordPress Core Files
# ====================
# Ignore WordPress core files - these should be managed via deployment
/index.php
/license.txt
/readme.html
/wp-*.php
/xmlrpc.php

# WordPress Core Directories
/wp-admin/
/wp-includes/

# WordPress Configuration
# ======================
# Never commit sensitive configuration files
wp-config.php
wp-config-sample.php

# Database and Environment
# ========================

*.sql
*.sql.gz
*.sql.zip

# WordPress Content - Selective Tracking
# ======================================

# Uploads Directory (user uploaded files)
/wp-content/uploads/
/wp-content/upgrade/
/wp-content/backup*/
/wp-content/backups/
/wp-content/blogs.dir/

# Cache Directories
/wp-content/cache/
/wp-content/advanced-cache.php
/wp-content/wp-cache-config.php

# WordPress Plugins (unless custom developed)
# ===========================================
# Track only specific custom plugins, ignore all others


# Exception: Track custom business plugins (uncomment if you have them)
# !/wp-content/plugins/custom-business-plugin/
# !/wp-content/plugins/your-custom-plugin/

# Themes - Selective Tracking
# ===========================
# Ignore all themes except our custom ones
/wp-content/themes/*

# Track our custom business theme
!/wp-content/themes/astra-child/

# But ignore compiled/built assets in the child theme
/wp-content/themes/astra-child/assets/dist/
/wp-content/themes/astra-child/assets/css/compiled/

# Track parent theme only if customized (usually not recommended)
# !/wp-content/themes/astra/

# Exception: Track any other custom themes
# !/wp-content/themes/your-other-custom-theme/

